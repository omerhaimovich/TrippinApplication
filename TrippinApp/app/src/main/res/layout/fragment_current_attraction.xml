<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:background="@color/white_trans"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="trippin.trippinapp.fragment.CurrentAttraction">

    <LinearLayout
        android:layout_width="match_parent" android:orientation="horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp" android:layout_margin="10dp"
            android:layout_height="100dp"
            android:id="@+id/imageViewCurrAttr" />

        <TextView android:id="@+id/fragment_name_attration"
            android:layout_width="0dp" android:layout_weight="3" android:text="Attraction Name"
            android:layout_height="wrap_content" android:textSize="32dp" android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/end_attraction_frag"
            android:layout_width="wrap_content" android:textSize="15dp"
            android:layout_height="wrap_content" android:text="X" android:layout_marginTop="-10dp"
            android:layout_alignParentBottom="true" android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_alignParentEnd="true" >
    </TextView>
    </LinearLayout>
</LinearLayout>
