<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trippin.trippinapp.fragment.Like">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content" android:layout_margin="10dp" android:textSize="16dp" android:text="So, Did you like this attraction?"
            android:layout_height="wrap_content" />
        <LinearLayout android:layout_centerInParent="true"
            android:layout_width="wrap_content" android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button android:background="@drawable/ic_thumb_up_black_24dp" android:layout_margin="10dp"
                android:layout_width="100dp" android:id="@+id/vote_up"
                android:layout_height="100dp" />
            <Button android:background="@drawable/ic_thumb_down_black_24dp"
                android:layout_width="100dp" android:layout_margin="10dp"
                android:id="@+id/vote_down"
                android:layout_height="100dp" />
        </LinearLayout>

    </LinearLayout>





</RelativeLayout>
